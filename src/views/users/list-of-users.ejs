<!DOCTYPE html>
<html lang="en">
  <!-- HEAD -->
  <%- include('../partials/head', {title : 'Usuarios'}) %>
  <!-- HEAD -->
  <body>
    <header>
      <nav><%- include('../partials/header') %></nav>
    </header>
    <main class="main-adminProdcuts">
      <h1>Listado de Usuarios</h1>
      <section class="editar-producto">
        <h1>Editar Usuarios</h1>
        <form class="search-product-form" action="/admin/users/search" method="GET">
          <button type="submit"><i class="fas fa-search"></i></button>
          <input
            type="search"
            name="keywords"
            placeholder="Nombre Usuario"
          />
        </form>
        <table>
          <tbody>
            <tr>
              <td>Id</td>
              <td>Nombre</td>
              <td>email</td>
              <!-- <td>Rol</td> -->
              <td></td>
              <td></td>
            </tr>

            <% if(locals.users && users.length) { %> <% users.forEach(user=> {
            %>
            <tr>
              <td><p><%= user.id %></p></td>
              <td class="tittle">
                <p><%= user.name %> <%= user.last_name %></p>
              </td>
              <td class="author"><p><%= user.email %></p></td>
              <!-- <td class="author"><p><%= user.role %></p></td> -->
              <td>
                <form action="/admin/users/<%= user.id %>" method="GET">
                  <button class="edit" type="submit">
                    <p>Editar</p>
                  </button>
                </form>
              </td>
              <td>
                <form action="/<%= user.id %>?_method=DELETE" method="POST">
                  <button class="delete">Eliminar</button>
                </form>
              </td>
            </tr>
            <% }); %> <% } else { %>
            <h4>No se encontraron datos de los libros</h4>
            <% } %>
          </tbody>
        </table>
      </section>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>
